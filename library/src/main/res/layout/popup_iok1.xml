<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    tools:background="@android:color/background_light">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="38dp"
        android:paddingRight="38dp">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/subtitle"
            style="@style/Bobz.Subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            tools:text="Follow us on"
            tools:textColor="@android:color/holo_orange_light" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp"
        android:weightSum="5">

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/socialPlatform1"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/facebook"
            android:visibility="gone"
            tools:visibility="visible" />

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/socialPlatform2"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/instagram"
            android:visibility="gone"
            tools:visibility="visible" />

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/socialPlatform3"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/twitter"
            android:visibility="gone"
            tools:visibility="visible" />

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/socialPlatform4"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/linkedin"
            android:visibility="gone"
            tools:visibility="visible" />

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/socialPlatform5"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/youtube"
            android:visibility="gone"
            tools:visibility="visible" />

    </LinearLayout>
</LinearLayout>