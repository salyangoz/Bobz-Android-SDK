<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingTop="8dp"
    android:weightSum="10">

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="right"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:src="@drawable/ic_close_black_24dp" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_weight="10"
        tools:src="@drawable/cygnusa_preview" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="38dp"
        android:paddingRight="38dp">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/subtitle"
            style="@style/Bobz.Subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Subscribe" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/description"
            style="@style/Bobz.Description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxHeight="40dp"
            tools:textColor="@android:color/darker_gray"
            tools:text="Get inspired idea everyday in your email" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/email"
            style="@style/Bobz.Input"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableLeft="@drawable/ic_email_black_24dp"
            android:hint="Enter your email address"
            android:inputType="textEmailAddress"
            android:drawableTint="@android:color/darker_gray"
            android:paddingLeft="12dp"
            android:paddingRight="12dp" />

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            tools:background="@android:color/holo_blue_dark"
            tools:text="SUBSCRIBE"
            tools:textColor="@android:color/white" />

    </LinearLayout>
</LinearLayout>